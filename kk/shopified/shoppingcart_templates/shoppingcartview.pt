<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="kk.shopified">
<body>

<metal:main fill-slot="main">
  <metal:content-core define-macro="main">
    <div id="shopping-cart">
      <h1 class="documentFirstHeading"
        i18n:translate="">Shopping Cart</h1>

        <tal:block tal:define="cart view/cart">
          <code tal:content="cart/data" />
        </tal:block>

        <code tal:content="view/cartitems" />

      <form tal:attributes="action request/URL"
        method="post">
        <label for="item_uuid">UUID</label>
        <input type="text" name="item.uuid" id="item_uuid"
          tal:define="item_uuid view/uuid"
          tal:attributes="value item_uuid" />
        <label for="item_quantity">Quantity</label>
        <input type="text"
          name="item.quantity"
          id="item_quantity"
          size="2"
          tal:attributes="value string: 1" />
        <div class="form-actions">
          <input class="context"
            type="submit"
            name="form.button.Submit"
            i18n:translate=""
            value="Update cart" />
        </div>
      </form>

      <table class="listing">
        <thead>
          <tr>
            <th>Amount</th>
            <th>Item</th>
            <th>Price</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>#Number</td>
            <td>Flux compensator</td>
            <td>XX &euro;</td>
          </tr>
          <tr>
            <td colspan="2">VAT</td>
            <td>Vat value = XX &euro;</td>
          </tr>
          <tr>
            <td colspan="2">NAT</td>
            <td>XX &euro;</td>
          </tr>
          <tr>
            <td colspan="3">
              <input type="submit" value="Update Cart" />
              <input type="submit" value="Clear Cart" />
              <input type="submit" value="Checkout Cart" />
            </td>
          </tr>
        </tbody>
      </table>

    </div>
  </metal:content-core>
</metal:main>

</body>
</html>

